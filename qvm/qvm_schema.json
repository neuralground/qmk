{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "QMK QVM Graph",
  "type": "object",
  "required": [
    "version",
    "program",
    "resources",
    "caps"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "0.1"
    },
    "program": {
      "type": "object",
      "required": [
        "nodes"
      ],
      "properties": {
        "nodes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "op"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "op": {
                "type": "string"
              },
              "args": {
                "type": "object"
              },
              "inputs": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "produces": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "vqs": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "chs": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "caps": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "guard": {
                "type": "object",
                "properties": {
                  "event": {
                    "type": "string"
                  },
                  "equals": {
                    "type": "integer",
                    "enum": [
                      0,
                      1
                    ]
                  }
                },
                "required": [
                  "event",
                  "equals"
                ]
              }
            }
          }
        }
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "vqs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "chs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "events": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "vqs",
        "chs",
        "events"
      ]
    },
    "caps": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
